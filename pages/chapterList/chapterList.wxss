.container{
    background: #f5f5f5;
    display: flex;
    flex-direction: column;
}
.tab{
    height: 90rpx;
    background: #fff;
    display: flex;
    justify-content: space-between;
}
.half{
    width: 50%;
    display: flex;
    justify-content: center;
    align-items: center;
}
.normal{
    font-size: 28rpx;
    color: #666;
    line-height: 70rpx;
    border-bottom: 4rpx solid transparent;
}
.on{
    color: #0084ff;
    border-bottom: 4rpx solid #0084ff;
}
.video{
    width: 100%;
    height: 422rpx;
}