<!--index.wxml-->
<view class="container">
    <view class="pageHead"><image src="/static/img/common/icon-left-black.png" class="goBackImg" bindtap="goBack"></image>{{chapterData.course_name}}</view>
    <view class="title">第{{chapterData.num}}章：{{chapterData.chapter_name}}</view>
    <view class="content">{{chapterData.content}}</view>
    <view class="fixeBtn">
        <view class="shang" bindtap="goShang">上一章</view>
        <view class="mulu" bindtap="getCourseData">目录</view>
        <view class="xia" bindtap="goXia">下一章</view>
    </view>
    <view class="selChapter" wx:if="{{isShowSelChapter}}" bindtap="_close">
        <view class="selDiv" catchtap="prevent">
            <view class="chapters" wx:for="{{chapterList}}" wx:key="{{index}}" data-item="{{item}}" bindtap="checkType">第{{index+1}}章：{{item.chapter_name}}</view>
        </view>
    </view>
</view>
